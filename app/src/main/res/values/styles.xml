<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#616161</item>
        <item name="colorAccent">#9E9E9E</item>
    </style>


    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SignupTheme" parent="AppTheme">
        <item name="colorPrimary">#2b2e3f</item>
        <item name="colorPrimaryDark">#2b2e3f</item>
        <item name="colorAccent">#2b2e3f</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HomeScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#616161</item>
        <item name="colorAccent">#9E9E9E</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:buttonStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="TwoWayView">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/lightCyan</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="spinner_style">
        <item name="android:divider">#d1d1d1</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:backgroundTint">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textColorPrimary">@color/red</item>
    </style>

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:state_checked">@color/white</item>
        <item name="android:state_checkable">@color/iron</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorButtonNormal">@color/lightCyan</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/primary_darker
        </item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/primary</item>
    </style>


    <style name="ExtralargeFont">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LargeFont">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MediumFont">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SmallFont">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="VerySmallFont">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorBlack</item>
        <item name="android:editTextStyle">@style/Widget.AppCompat.EditText</item>
    </style>

    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar_horizontal</item>
        <item name="android:minHeight">3dp</item>
        <item name="android:maxHeight">3dp</item>
        <item name="android:color">#111</item>
    </style>


    <style name="tabTheme" parent="android:style/Theme">
        <item name="android:tabWidgetStyle">@style/Widget.TabWidget</item>
    </style>

    <style name="Widget.TabWidget" parent="android:Theme">
        <item name="android:tabStripEnabled">false</item>
    </style>

    <style name="TIL" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorHint">@color/willwish</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/willwish</item>
        <item name="colorControlNormal">@color/willwish</item>
        <item name="colorControlActivated">@color/willwish</item>
    </style>

    <style name="SpinnerTextViewItem" parent="@android:style/Widget.TextView">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">13sp</item>

        <item name="android:textColor">@color/md_grey_500</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light">
        <item name="android:textAppearanceListItemSmall">@style/agentSpinnerStyle</item>
    </style>

    <style name="agentSpinnerStyle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tabBoxTheme" parent="android:Widget">
        <item name="tabBackground">@drawable/tab_bg</item>
        <item name="tabIndicatorColor">#ffffff</item>
        <item name="tabIndicatorHeight">1dp</item>
    </style>
</resources>
