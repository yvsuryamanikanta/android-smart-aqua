<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.odos.smartaqua.feed.FeedInfoViewModel" />
    </data>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgapp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bgapp"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bgapp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_head_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingLeft="@dimen/_19sdp"
                    android:paddingTop="@dimen/_19sdp"
                    android:textColor="@color/txtColor"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txt_feed_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingLeft="@dimen/_19sdp"
                    android:paddingTop="@dimen/_19sdp"
                    android:textColor="@color/red"
                    android:textSize="17sp" />

                <LinearLayout
                    android:id="@+id/ll_feed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_box"
                    android:orientation="vertical"
                    android:padding="@dimen/_19sdp"
                    android:weightSum="1">


                </LinearLayout>

                <TextView
                    android:id="@+id/txt_suppliment_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingLeft="@dimen/_19sdp"
                    android:paddingTop="@dimen/_19sdp"
                    android:textColor="@color/red"
                    android:textSize="17sp" />

                <LinearLayout
                    android:id="@+id/ll_suppliment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_box"
                    android:orientation="vertical"
                    android:padding="@dimen/_19sdp"
                    android:weightSum="1">


                </LinearLayout>

                <TextView
                    android:id="@+id/txt_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingTop="@dimen/_19sdp"
                    android:textColor="@color/txtColor"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:padding="@dimen/_7sdp"
                android:text="Share"
                android:textColor="@color/white"
                android:textSize="15sp" />


        </LinearLayout>
    </ScrollView>

</layout>