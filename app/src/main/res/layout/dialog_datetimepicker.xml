<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/ll_date_time_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/txtColor"
            android:orientation="horizontal"
            android:weightSum="1">

            <DatePicker
                android:id="@+id/datePicker_reminder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:spinnersShown="true"
                android:startYear="2019"
                tools:targetApi="lollipop" />

            <TimePicker
                android:id="@+id/timePicker_reminder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:headerBackground="@color/colorAccent"
                android:timePickerMode="spinner"
                android:visibility="gone"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/btn_set_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="0.2"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="@string/set"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_set_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="0.2"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="@string/set"
                android:textAllCaps="true"
                android:textColor="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_cance_pickers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/action_cancel"
            android:textAllCaps="true"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>

