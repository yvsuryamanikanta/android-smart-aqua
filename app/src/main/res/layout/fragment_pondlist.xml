<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="missingPrefix">

    <data>

        <variable
            name="viewModel"
            type="com.odos.smartaqua.tank.PondListFragmentViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="1dp">

            <TextView
                android:id="@+id/txt_tank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="B3"
                android:textColor="@color/red"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/banner" />

            <TextView
                android:id="@+id/txt_tank_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center|start"
                android:text="Tank Address : "
                android:textColor="@color/txtColor"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/txt_tank_Size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center|start"
                android:text="Tank Size : 5 Hectors "
                android:textColor="@color/txtColor"
                android:textSize="19sp" />


            <TextView
                android:id="@+id/txt_preparation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center|start"
                android:text="Culture Preparation"
                android:textColor="@color/red"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_decease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center|start"
                android:text="Previous decease :  "
                android:textColor="@color/txtColor"
                android:textSize="19sp" />

            <TextView
