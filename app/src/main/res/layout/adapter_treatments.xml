<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.odos.smartaqua.treatment.TreatmentModel" />
    </data>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_6sdp"
            app:cardCornerRadius="@dimen/_2sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linear_treatment_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:orientation="horizontal"
                        android:padding="0.2dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="@color/white"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center|start"
                            android:padding="5dp"
                            android:text="Treatment Id"
                            android:textColor="@color/txtColor"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_treatment_id"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_weight="0.5"
                            android:background="@color/white"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:textColor="@color/txtColor"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_createddate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:orientation="horizontal"
                        android:padding="0.2dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="@color/white"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center|start"
                            android:padding="5dp"
                            android:text="Created Date"
                            android:textColor="@color/txtColor"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt_createddate"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_weight="0.5"
                            android:background="@color/white"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:textColor="@color/txtColor"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_tank"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:orientation="horizontal"
                        android:padding="0.2dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="@color/white"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center|start"
                            android:padding="5dp"
                            android:text="Tank Id"
                            android:textColor="@color/txtColor"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt_tankid"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_weight="0.5"
                            android:background="@color/white"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:textColor="@color/txtColor"
                            android:textSize="14sp"
                            tools:text="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_decease"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:orientation="horizontal"
                        android:padding="0.2dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="@color/white"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center|start"
                            android:padding="5dp"
                            android:text="Decease"
                            android:textColor="@color/txtColor"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt_decease"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_weight="0.5"
                            android:background="@color/white"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:textColor="@color/txtColor"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_modifieddate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:orientation="horizontal"
                        android:padding="0.2dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="@color/white"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center|start"
                            android:padding="5dp"
                            android:text="Modified Date"
                            android:textColor="@color/txtColor"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt_modifieddate"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_weight="0.5"
                            android:background="@color/white"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:textColor="@color/txtColor"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_treatmentdate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:orientation="horizontal"
                        android:padding="0.2dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="@color/white"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center|start"
                            android:padding="5dp"
                            android:text="Treatment Date"
                            android:textColor="@color/txtColor"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt_treatmentdate"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_weight="0.5"
                            android:background="@color/white"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:textColor="@color/txtColor"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_solution"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:orientation="horizontal"
                        android:padding="0.2dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="@color/white"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center|start"
                            android:padding="5dp"
                            android:text="Solution"
                            android:textColor="@color/txtColor"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt_solution"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_weight="0.5"
                            android:background="@color/white"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:textColor="@color/txtColor"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/red"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:padding="@dimen/_7sdp"
                    android:text="Share"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>
</layout>